<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:userInterface="clr-namespace:User_Interface"
             x:Class="User_Interface.Oefenscherm">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="25">
        <Label x:Name="TimerLabel" Text="00:00:00" HorizontalOptions="Center" FontSize="25" TextColor="#007ACC"/>
        <Label x:Name="InstructionsLabel" HorizontalOptions="Center" FontSize="24" FontAttributes="Bold"/>
        <Entry x:Name="TextInputEntry" Placeholder="Type de tekst hier en klik enter als je klaar bent."
               HorizontalOptions="CenterAndExpand" Completed="TextInputEntry_Completed"
               FontSize="22" WidthRequest="500" HeightRequest="50" />
        <Label x:Name="ResultsLabel" Text="" HorizontalOptions="Center" FontSize="25" TextColor="#007ACC"/>
    </StackLayout>
</ContentPage>