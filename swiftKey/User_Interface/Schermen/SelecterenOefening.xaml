<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="User_Interface.Schermen.SelecterenOefening">
    <!-- Set background color to White or another color to fill the screen -->

    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- This column will contain the buttons -->
                <ColumnDefinition Width="*"/>
                <!-- This column will contain the ListView and fill remaining space -->
            </Grid.ColumnDefinitions>

            <!-- Grid containing the buttons -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Row for the other buttons -->
                    <RowDefinition Height="*"/>
                    <!-- Row for the "Uitloggen" button -->
                </Grid.RowDefinitions>

                <!-- StackLayout containing the other buttons -->
                <StackLayout Grid.Row="0" VerticalOptions="Start">
                    <Button Text="Home" Margin="10"/>
                    <!-- Margin added to the right and bottom of the button -->
                    <Button Text="Leaderboard" Margin="10"/>
                    <!-- Margin added to the right and bottom of the button -->
                    <Button Text="Account" Margin="10"/>
                    <!-- Margin added to the right and bottom of the button -->
                </StackLayout>

                <!-- "Uitloggen" button -->
                <Button Text="Uitloggen" Grid.Row="1" VerticalOptions="End" Margin="10"/>
                <!-- Aligned to the bottom of the grid with a margin -->
            </Grid>

            <!-- ListView Column -->
            <ListView x:Name="SelectOefeningen"
                      Grid.Column="1"
                      SeparatorColor="Grey"
                      SeparatorVisibility="Default"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand">
                <!-- Expand vertically to fill available space -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10" ColumnSpacing="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image Grid.RowSpan="2"
                                       Source="{Binding ImageLocation}"
                                       Aspect="Fill"
                                       HeightRequest="60"
                                       WidthRequest="100" />

                                <Label Grid.Column="1"
                                       Text="{Binding Name}"
                                       FontAttributes="Bold" 
                                       FontSize="20"
                                       LineBreakMode="TailTruncation" />
                                
                                <Frame Grid.Row="1"
                                       Grid.Column="1"
                                       Padding="5"
                                       BackgroundColor="Gray"
                                       HorizontalOptions="End" 
                                       Margin="0,0,20,0"
                                       VerticalOptions="Start">
                                    <Label Text="{Binding Difficulty}"
                                           FontAttributes="Italic"
                                           FontSize="10"
                                           HorizontalOptions="End"
                                           VerticalOptions="Center"
                                           LineBreakMode="WordWrap"/>
                                    </Frame>

                                <!-- Truncate text with ellipses if it doesn't fit -->
                                <Frame Grid.Row="1"
                                       Grid.Column="1"
                                       Padding="5"
                                       BackgroundColor="Gray"
                                       HorizontalOptions="Start" 
                                       Margin="0,0,20,0"
                                       VerticalOptions="Start">
                                    <Label Text="{Binding Tags}"
                                           FontAttributes="Italic"
                                           FontSize="15"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center"
                                           LineBreakMode="WordWrap"/>
                                </Frame>
                                
                                


                                <!-- Enable text wrapping -->
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
