<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="User_Interface.Schermen.SelecterenOefening">

<!--De grid hieronder functioneert als een horizontalstacklayout, Aangezien de horizontalstacklayout niet de juiste functionaliteit-->
    <Grid HorizontalOptions="FillAndExpand" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
    
 <!--De grid hieronder is voor het plaatsen van de knoppen op de juiste plek aan de linker kant van het scherm-->
        <Grid  Margin="2" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="Home" Grid.Row="0"/>
            <Button Text="Leaderboard" Grid.Row="1"/>
            <Button Text="Account" Grid.Row="3"/>
            <Button Text="Uitloggen" Grid.Row="4"/>
        </Grid>
        
        <ListView x:Name="SelectOefeningen"
              SeparatorColor="Grey"
              SeparatorVisibility="Default"
              Grid.Column="1">
            <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
    <!--De grid hieronder is voor de opmaak van de oefeningslabels-->
                    <Grid Padding="10" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="15" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <Image Grid.RowSpan="3"
                           Source="{Binding ImageLocation}"
                           Aspect="Fill"
                           HeightRequest="60"
                           WidthRequest="100" />
                        <Label Grid.Column="1"
                           Text="{Binding Name}"
                           FontAttributes="Bold" />
                        <Label Grid.Row="1"
                           Grid.Column="2"
                           Text="{Binding Difficulty}"
                           FontAttributes="Italic"
                           FontSize="10"
                           HorizontalOptions="End"
                           BackgroundColor="Gray"
                           />
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    </Grid>
</ContentPage>
