<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="User_Interface.Resultscherm">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" IsVisible="False"/>
    </Shell.BackButtonBehavior>

    <ScrollView>
        <VerticalStackLayout
            Padding="10,0"
            Spacing="20">

            <Label
                Text="Resultaten"
                Style="{StaticResource Headline}"
                />
            <Label
                x:Name="Wpm"
                Text=""
                FontSize="15"
                HorizontalOptions="Center"
                />
            <Label
                x:Name="Tijd"
                Text="tijd"
                FontSize="15"
                HorizontalOptions="Center"
                />

            <Label
                x:Name="Ratio"
                Text="Goed/Fout ratio:99%"
                FontSize="15"
                HorizontalOptions="Center"
                />
            <Label
                x:Name="Fouten"
                Text=""
                FontSize="15"
                HorizontalOptions="Center"
                />
            <Button Clicked="DoneButton_Clicked" MaximumWidthRequest="120" Text="Klaar"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>



