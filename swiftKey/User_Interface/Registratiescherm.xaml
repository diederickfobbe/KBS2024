<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="User_Interface.Registratiescherm">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="20">
        <Entry Placeholder="Gebruikersnaam" x:Name="UsernameEntry" FontSize="20" HeightRequest="25" WidthRequest="500"/>
        <Entry Placeholder="E-mail" x:Name="EmailEntry" FontSize="20" HeightRequest="25" WidthRequest="500"/>
        <Entry Placeholder="Wachtwoord" x:Name="PasswordEntry" FontSize="20" IsPassword="True" HeightRequest="25" WidthRequest="500"/>
        <Entry Placeholder="Herhaal wachtwoord" x:Name="RepeatPasswordEntry" FontSize="20" IsPassword="True" HeightRequest="25" WidthRequest="500"/>

        <Button Text="Registreren" Clicked="Button_OnRegisterClicked" FontSize="20"/>
    </StackLayout>

</ContentPage>
